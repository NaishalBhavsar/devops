# Build stage
FROM node:18-alpine AS build

WORKDIR /app

COPY package*.json ./
RUN npm install

COPY . .
RUN npm run build --prod  # Assumes Angular build command; adjust if different

# Serve stage with nginx
FROM nginx:alpine

COPY --from=build /app/dist/your-angular-app /usr/share/nginx/html  # Replace 'your-angular-app' with actual dist folder name

# Expose port 80
EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
