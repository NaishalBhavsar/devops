# Use Node.js official image
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package.json and install dependencies
COPY package*.json ./
RUN npm install

# Copy the rest of the code
COPY . .

# Expose port 3000 (assuming backend runs on 3000; adjust if needed)
EXPOSE 3000

# Start the app
CMD ["npm", "start"]
